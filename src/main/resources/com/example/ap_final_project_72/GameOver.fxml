<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="540.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ap_final_project_72.GameOverController">
    <children>
        <ImageView fitHeight="540.0" fitWidth="960.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@images/home_page.png" />
            </image>
        </ImageView>
        <Label layoutX="341.0" layoutY="210.0" prefHeight="28.0" prefWidth="256.0" text="Do You Want To Save ?">
            <font>
                <Font name="Times New Roman" size="24.0" />
            </font>
        </Label>
      <Label layoutX="264.0" layoutY="106.0" prefHeight="155.0" prefWidth="572.0" text="GAME OVER!!">
         <font>
            <Font name="Segoe UI Black" size="60.0" />
         </font>
      </Label>
        <ImageView fitHeight="100.0" fitWidth="100.0" layoutX="300.0" layoutY="250.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@images/yes.png" />
            </image>
        </ImageView>
        <ImageView fitHeight="100.0" fitWidth="100.0" layoutX="500.0" layoutY="250.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@images/no.png" />
            </image>
        </ImageView>
        <Button fx:id="yesButton" layoutX="300.0" layoutY="250.0" mnemonicParsing="false" onAction="#SaveGame" opacity="0.0" prefHeight="100.0" prefWidth="100.0" />
        <Button fx:id="noButton" layoutX="500.0" layoutY="250.0" mnemonicParsing="false" onAction="#MainMenu" opacity="0.0" prefHeight="100.0" prefWidth="100.0" />
    </children>
</AnchorPane>
